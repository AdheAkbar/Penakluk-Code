generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma
model Property {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  location    String
  bedrooms    Int
  bathrooms   Int
  area        Float
  imageUrl    String
  type        String   // Tambahkan ini
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
